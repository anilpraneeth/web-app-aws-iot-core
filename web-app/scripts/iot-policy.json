{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "iot:Connect",
                "iot:Subscribe",
                "iot:Receive"
            ],
            "Resource": [
                "arn:aws:iot:${region}:${account-id}:client/${iot:ClientId}",
                "arn:aws:iot:${region}:${account-id}:topic/*"
            ]
        }
    ]
} 